<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PageWithGames.TicTacToeModePage"
             Title="Выбор режима">

    <VerticalStackLayout 
        Spacing="30" 
        Padding="30"
        VerticalOptions="Center"
        HorizontalOptions="Center">

        <Label 
            Text="Выберите режим игры:"
            FontSize="28"
            FontAttributes="Bold"
            HorizontalOptions="Center" />

        <Button 
            Text="Против другого игрока"
            FontSize="22"
            WidthRequest="300"
            HeightRequest="70"
            CornerRadius="10"
            Clicked="OnModeSelected"
            CommandParameter="Human" />

        <Button 
            Text="Против компьютера (AI)"
            FontSize="22"
            WidthRequest="300"
            HeightRequest="70"
            CornerRadius="10"
            Clicked="OnModeSelected"
            CommandParameter="Bot" />

    </VerticalStackLayout>
</ContentPage>